<h1>Create Blogs</h1>

<%= form_with(model: @blog, url: blogs_path) do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :content %>
  <%= form.text_area :content %>

   <%= form.hidden_field :author_id, value: current_user.id %>

  <%= form.submit "Submit" %>

<% end %>

<%= link_to "Back", blogs_path %>
